@model Model.student


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>学员修改</title>
    <style type="text/css">
        li {
        list-style:none;
        padding:8px;
        }
        input {
        border:1px solid #808080;
        }
    </style>
</head>
<body>
   <form method="post" action="/Student/Edit">
    @{

        <ul>
            <li>学员学号:<input type="text" readonly="readonly" name="stuId" value="@Model.StudentId" /></li>
            <li>学员姓名:<input type="text" name="stuName" value="@Model.StudentName" /></li>
            <li>
                学员性别:<input type="radio" name="gender" checked="@Model.Gender.Equals("男")" value="男" />
                <input type="radio" name="gender" checked="@Model.Gender.Equals("女")" value="女" />
            </li>
            <li>出生日期:<input type="text" name="birthday" value="@Model.Birthday" /></li>
            <li>身份证号:<input type="text" name="stuIdNo" value="@Model.StudentIdNo" /></li>
            <li>手机号码:<input type="text" name="phoneNumber" value="@Model.PhoneNumber" /></li>
            <li>家庭住址:<input type="text" name="stuAddress" value="@Model.StudentAddress" /></li>
            <li>班级:<input type="text" name="classId" value="@Model.ClassId" /></li>
            <li><input type="submit" value="提交修改" /></li>
        </ul>
    }
        
    </form>

</body>
</html>
